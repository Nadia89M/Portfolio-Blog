<div class="container portfolio-container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag @portfolio_item.main_img, style: 'height:400px;width:600px;' unless @product.image_url.nil? %>
    </div>

    <div class="col-md-5">
      <h1><%= @portfolio_item.title %></h1>

      <hr>

      <em><%= @portfolio_item.subtitle %></em>

      <p><%= @portfolio_item.body %></p>

      <hr>

      <% if logged_in?(:site_admin) %>
        <div class="">
          <%= link_to "Edit Item", edit_portfolio_path(@portfolio_item), class: 'btn btn-primary' %> |
          <%= link_to 'Delete Item', @portfolio_item, class: 'btn btn-primary', method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin) %>
        </div>
      <% end %>
    </div>
  </div>
</div>
