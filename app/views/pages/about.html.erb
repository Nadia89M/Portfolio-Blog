<div class="app-card-container">
  <div class="card">
    <h1>About Me</h1>

    <hr>

    <div class="row">
      <div class="col-md-4">
        <%= image_tag "photo.jpg", width: 200, alt: "profile image", class: 'profile-img' %>
      </div>

      <div class="col-md-8">
        <p>
          Hello, I'm Nadia. I'm a multi-skills professional ready to address any help you may need to make your business stand out online.
        </p>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="skills">
          <% @skills.each do |skill| %>
            <div class="skill">
              <h4><%= skill.title %></h4>
              <div class="progress">
                <div
                  class="progress-bar progress-bar-striped bg-warning"
                  role="progressbar"
                  aria-valuenow="<%= skill.percent %>"
                  aria-valuemax="100"
                  style="width: <%= skill.percent %>%"
                ></div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
